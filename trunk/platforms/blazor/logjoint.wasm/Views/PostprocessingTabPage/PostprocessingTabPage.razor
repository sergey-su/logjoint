@namespace LogJoint.Wasm.UI
@using LogJoint.UI.Presenters.Postprocessing.MainWindowTabPage;
@inject IJSRuntime jsRuntime;
@implements IDisposable
@inject LogJoint.UI.Presenters.PresentationObjects presentation

<div class='postprocessings-tabpage @Class'>
    @foreach (var (controlId, controlData) in viewModel.ControlsState)
    {
        if (controlId != ViewControlId.StateInspector && controlId != ViewControlId.Timeline)
        {
            continue;
        }
        <div class='control @(controlData.Disabled ? "disabled" : "")'>
            @foreach (var part in LogJoint.UI.Presenters.LinkLabelUtils.SplitLinkLabelString(controlData.Content))
            {
                @if (part.LinkData != null)
                {
                    <a href="#"
                       @onclick="@(e => viewModel.OnActionClick(part.LinkData, controlId, ClickFlags.None))"
                       @onclick:preventDefault>@part.Text</a>
                }
                @if (part.LinkData == null)
                {
                    <span>@part.Text</span>
                }
            }
            @if (controlData.Progress.HasValue)
            {
                <CircularProgress Value=@(controlData.Progress.Value) />
            }
        </div>
    }
</div>

@code {
    private IViewModel viewModel => presentation.ViewModels.PostprocessingsTab;
    private ISubscription subscription;

    [Parameter]
    public string Class { get; set; } = "";

    protected override void OnInitialized()
    {
        subscription = viewModel.ChangeNotification.CreateSubscription(Updaters.Create(
            () => viewModel.ControlsState,
            _ => StateHasChanged()
        ));
    }

    public void Dispose()
    {
        subscription?.Dispose();
    }
}
